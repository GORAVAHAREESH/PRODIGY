<!DOCTYPE html>
<html>
<head>
  <title>Tic-Tac-Toe</title>
  <style>
    .board { display: grid; grid-template-columns: repeat(3, 60px); gap: 5px; margin: 20px auto; }
    .cell { width: 60px; height: 60px; font-size: 24px; text-align: center; line-height: 60px; background: #eee; cursor: pointer; border: 1px solid #333; }
    #status { text-align: center; margin-top: 10px; }
  </style>
</head>
<body>
  <div class="board" id="board"></div>
  <div id="status">Player X's turn</div>
  <script>
    const board = document.getElementById("board");
    const status = document.getElementById("status");
    let cells = Array(9).fill(""), current = "X", active = true;

    for (let i = 0; i < 9; i++) {
      const cell = document.createElement("div");
      cell.className = "cell";
      cell.onclick = () => {
        if (!active || cells[i]) return;
        cells[i] = current;
        cell.textContent = current;
        if (check()) {
          status.textContent = Player ${current} wins!; active = false;
        } else if (!cells.includes("")) {
          status.textContent = "It's a draw!"; active = false;
        } else {
          current = current === "X" ? "O" : "X";
          status.textContent = Player ${current}'s turn;
        }
      };
      board.appendChild(cell);
    }

    function check() {
      const w = [[0,1,2],[3,4,5],[6,7,8],[0,3,6],[1,4,7],[2,5,8],[0,4,8],[2,4,6]];
      return w.some(c => c.every(i => cells[i] === current));
    }
  </script>
</body>
</html>
